<?xml version="1.0"?>
<config>
	  <tabs>
		<suggest_price translate="label" module="suggestprice">
            <label>Suggest Price</label>
            <sort_order>0</sort_order>
        </suggest_price>
	  </tabs>
	  <sections>
		<suggest_price  translate="label" module="suggestprice">                    
		<label>Manage suggest price</label>
		<tab>suggest_price</tab>
		<frontend_type>text</frontend_type>
		<sort_order>0</sort_order>
		<show_in_default>1</show_in_default>
		<show_in_website>1</show_in_website>
		<show_in_store>1</show_in_store>            
					<groups>
				      <suggest translate="label"> 
						  <label>Price Suggestion</label>
						  <frontend_type>text</frontend_type>
						  <sort_order>1</sort_order>
						  <show_in_default>1</show_in_default>
						  <show_in_website>1</show_in_website>
						  <show_in_store>1</show_in_store>
						   <fields>
							   <email_name translate="label">
								<label>Receiver's Name</label>
								<frontend_type>text</frontend_type>
								<sort_order>10</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<show_in_store>1</show_in_store>
							  </email_name> 	
							  <email_address translate="label">
								<label>Receiver's E-mail</label>
								<frontend_type>text</frontend_type>
								<sort_order>11</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<show_in_store>1</show_in_store>
							  </email_address>
							  <email_subject translate="label">
								<label>Subject</label>
								<frontend_type>text</frontend_type>
								<sort_order>12</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<show_in_store>1</show_in_store>
							  </email_subject> 
							  <email_template translate="label">
								<label>Email template</label>
								<frontend_type>select</frontend_type>
								<source_model>adminhtml/system_config_source_email_template</source_model>
								<sort_order>13</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<show_in_store>1</show_in_store>
								<comment>After submitting price suggestion Owner get email notification so you can select Email template here.</comment>
							  </email_template>
							  <success_message translate="label">
								<label>Success message</label>
								<frontend_type>text</frontend_type>
								<sort_order>16</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<show_in_store>1</show_in_store>
							  </success_message>
						   </fields>
					   </suggest>
					</groups>
		</suggest_price>
	  </sections>
</config>
